{
  "name": "@addon-core/inject-script",
  "version": "0.2.2",
  "description": "A lightweight, TypeScript-ready library for injecting JavaScript functions or external scripts into Chrome extension tabs and frames (Manifest V2 & V3).",
  "keywords": [
    "browser",
    "addon",
    "extension",
    "google",
    "chrome",
    "opera",
    "edge",
    "firefox",
    "safari",
    "api",
    "script"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/addon-stack/inject-script"
  },
  "homepage": "https://github.com/addon-stack/inject-script",
  "bugs": {
    "url": "https://github.com/addon-stack/inject-script/issues"
  },
  "license": "MIT",
  "author": "Addon Stack <addonbonedev@gmail.com>",
  "contributors": [
    "Anjey Tsibylskij (https://github.com/atldays)"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "prepare": "husky",
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "dev": "tsup --watch",
    "format": "biome format --write .",
    "format:check": "biome check --formatter-enabled=true --linter-enabled=false .",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "lint:fix:unsafe": "biome check --write --unsafe .",
    "test": "jest",
    "test:ci": "jest --ci --passWithNoTests --coverage",
    "test:related": "jest --bail --passWithNoTests --findRelatedTests",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "release": "release-it"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,cjs,mjs}": [
      "biome check --write --unsafe",
      "npm run test:related --"
    ],
    "*.{json,css,scss,html}": [
      "biome format --write"
    ]
  },
  "dependencies": {
    "@addon-core/browser": "^0.2.1",
    "nanoid": "^5.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/chrome": "^0.1.12",
    "@types/jest": "^30.0.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.2.1",
    "release-it": "^19.0.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "glob": "^9.3.5",
    "source-map": "npm:source-map-js@^1.2.0"
  }
}
